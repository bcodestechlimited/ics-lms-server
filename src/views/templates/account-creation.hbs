{{#> base_template}}
  {{#*inline "content"}}
    <h1 style="margin: 0 0 20px 0; font-size: 24px; line-height: 30px; color: #333333; font-weight: 700; text-align: center;">
      Successful Registration
    </h1>

    <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 24px; color: #555555;">
      <strong>Hi {{name}},</strong>
    </p>

    <p style="margin: 0 0 25px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Thank you for registering your account with us. We're excited to have you on board! To activate your account and get started, please click the button below:
    </p>

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="margin: 30px auto;">
      <tr>
        <td align="center" bgcolor="#FF502A" style="border-radius: 4px;">
          <a href="{{activationLink}}" target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 30px; border-radius: 4px; border: 1px solid #FF502A; display: inline-block; font-weight: bold;">
            Activate Account
          </a>
        </td>
      </tr>
    </table>

    <p style="margin: 0; font-size: 14px; line-height: 21px; color: #999999; text-align: center;">
      <em><strong>Important:</strong> This link expires in 24 hours.</em>
    </p>

  {{/inline}}
{{/base_template}}
