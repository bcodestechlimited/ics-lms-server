{{#> base_template}}
  {{#*inline "content"}}

    <div style="text-align: center; padding-bottom: 20px;">
      <img
        src="https://cdn-icons-png.flaticon.com/512/1067/1067357.png"
        alt="Rocket"
        width="70"
        style="width: 70px; max-width: 100%; height: auto; border: 0; display: block; margin: 0 auto;"
      />
    </div>

    <h1 style="margin: 0 0 20px 0; font-size: 24px; line-height: 30px; color: #333333; font-weight: 700; text-align: center;">
      Welcome to {{platformName}}! üöÄ
    </h1>

    <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Hi <strong>{{firstName}},</strong>
    </p>

    <p style="margin: 0 0 20px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Your learning journey with <strong>{{companyName}}</strong> has just begun! We've created your account on the platform where you can access resources, engage with interactive content, and track your progress.
    </p>

    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 25px 0;">
      <tr>
        <td bgcolor="#fff9f7" style="padding: 20px; border-radius: 8px; border-left: 4px solid #FF502A;">
          <p style="margin: 0; font-size: 15px; line-height: 22px; color: #333333;">
            <strong>‚ö†Ô∏è Important Deadline:</strong><br>
            You have <strong style="color: #FF502A;">{{durationDays}} day(s)</strong> to complete your assigned courses.
            <br><br>
            <span style="font-size: 14px; color: #666;">After this period, access will expire and courses will move to your <em>Expired Courses</em> section.</span>
          </p>
        </td>
      </tr>
    </table>

    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 25px 0;">
      <tr>
        <td bgcolor="#f8f8f8" style="padding: 20px; border-radius: 6px; border: 1px solid #eeeeee;">
           <p style="margin: 0 0 15px 0; font-size: 15px; color: #333333; font-weight: bold; border-bottom: 1px solid #ddd; padding-bottom: 10px;">
             First-Time Access Instructions
           </p>

           <p style="margin: 0 0 8px 0; font-size: 15px; color: #555555;">
             <strong>Username:</strong> {{email}}
           </p>
           <p style="margin: 0; font-size: 15px; color: #555555;">
             <strong>Password:</strong> <span style="font-family: monospace; background: #ffffff; padding: 3px 8px; border-radius: 4px; border: 1px solid #dddddd; color: #333;">{{password}}</span>
           </p>
        </td>
      </tr>
    </table>

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="margin: 30px auto;">
      <tr>
        <td align="center" bgcolor="#FF502A" style="border-radius: 4px;">
          <a href="{{loginUrl}}" target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 30px; border-radius: 4px; border: 1px solid #FF502A; display: inline-block; font-weight: bold;">
            Access Your Dashboard
          </a>
        </td>
      </tr>
    </table>

    <div style="font-size: 13px; color: #666666; background-color: #ffffff; border-top: 1px solid #eeeeee; padding-top: 20px; margin-top: 20px;">
      <p style="margin: 0 0 5px 0; font-weight: bold; color: #333;">üõ°Ô∏è Security Reminder:</p>
      <ul style="margin: 0; padding-left: 20px; line-height: 20px;">
        <li>You will be prompted to change your password on first login.</li>
        <li>Please do not share your credentials.</li>
        <li>Need help? Contact <a href="mailto:{{supportEmail}}" style="color: #FF502A; text-decoration: none;">IT Support</a>.</li>
      </ul>
    </div>

    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 20px 0;">
      <tr>
        <td style="padding-top: 10px;">
           <p style="margin: 10px 0 5px 0; font-size: 12px; color: #999999;">
             Button not working? Copy and paste this link:
           </p>
           <p style="margin: 0; font-size: 12px; color: #FF502A; word-break: break-all; line-height: 1.4;">
             <a href="{{loginUrl}}" style="color: #FF502A; text-decoration: underline;">{{loginUrl}}</a>
           </p>
        </td>
      </tr>
    </table>

    <p style="margin: 30px 0 0 0; font-size: 14px; line-height: 21px; color: #999999; text-align: center; font-style: italic;">
      We‚Äôre thrilled to have you onboard!
    </p>

  {{/inline}}
{{/base_template}}
