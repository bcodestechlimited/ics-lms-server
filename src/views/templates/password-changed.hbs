{{#> base_template}}
  {{#*inline "content"}}

    <div style="text-align: center; padding-bottom: 20px;">
      <img src="https://cdn-icons-png.flaticon.com/512/1161/1161388.png" alt="Secure Success" width="80" style="width: 80px; max-width: 100%; height: auto; border: 0; display: block; margin: 0 auto;" />
    </div>

    <h1 style="margin: 0 0 20px 0; font-size: 24px; line-height: 30px; color: #333333; font-weight: 700; text-align: center;">
      Password Changed Successfully
    </h1>

    <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Hello <strong>{{userName}},</strong>
    </p>

    <p style="margin: 0 0 25px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Your password for <strong>Logira Academy</strong> has been successfully updated. You can now log in to your account using your new credentials.
    </p>

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="margin: 30px auto;">
      <tr>
        <td align="center" bgcolor="#FF502A" style="border-radius: 4px;">
          <a href="{{loginUrl}}" target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 30px; border-radius: 4px; border: 1px solid #FF502A; display: inline-block; font-weight: bold;">
            Log In Now
          </a>
        </td>
      </tr>
    </table>

    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 30px 0;">
      <tr>
        <td bgcolor="#fff9f7" style="padding: 20px; border-radius: 8px; border-left: 4px solid #FF502A;">
          <p style="margin: 0 0 5px 0; font-size: 15px; color: #333333;">
            <strong>⚠️ Did you not make this change?</strong>
          </p>
          <p style="margin: 0; font-size: 14px; line-height: 21px; color: #666666;">
            If you did not authorize this change, please <a href="{{supportUrl}}" style="color: #FF502A; text-decoration: underline;">contact support immediately</a> to secure your account.
          </p>
        </td>
      </tr>
    </table>

    <div style="border-top: 1px solid #eeeeee; padding-top: 25px; margin-top: 25px;">
      <p style="margin: 0 0 10px 0; font-size: 14px; font-weight: bold; color: #333333;">
        Recommended Security Tips:
      </p>
      <ul style="margin: 0; padding-left: 20px; font-size: 14px; line-height: 22px; color: #666666;">
        <li style="margin-bottom: 5px;">Use a unique password for each of your accounts.</li>
        <li>Never share your password with anyone.</li>
      </ul>
    </div>

  {{/inline}}
{{/base_template}}
