{{#> base_template}}
  {{#*inline "content"}}

    <div style="text-align: center; padding-bottom: 20px;">
      <img
        src="https://cdn-icons-png.flaticon.com/512/2889/2889676.png"
        alt="Secure Reset"
        width="70"
        style="width: 70px; max-width: 100%; height: auto; border: 0; display: block; margin: 0 auto;"
      />
    </div>

    <h1 style="margin: 0 0 20px 0; font-size: 24px; line-height: 30px; color: #333333; font-weight: 700; text-align: center;">
      Reset Your Password
    </h1>

    <p style="margin: 0 0 15px 0; font-size: 16px; line-height: 24px; color: #555555;">
      Hello <strong>{{userName}},</strong>
    </p>

    <p style="margin: 0 0 25px 0; font-size: 16px; line-height: 24px; color: #555555;">
      We received a request to reset the password for your <strong>Logira Academy</strong> account. If you didn't make this request, you can safely ignore this email.
    </p>

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" style="margin: 30px auto;">
      <tr>
        <td align="center" bgcolor="#FF502A" style="border-radius: 4px;">
          <a href="{{resetPasswordUrl}}" target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 30px; border-radius: 4px; border: 1px solid #FF502A; display: inline-block; font-weight: bold;">
            Reset Password
          </a>
        </td>
      </tr>
    </table>

    <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin: 30px 0;">
      <tr>
        <td bgcolor="#f8f8f8" style="padding: 15px; border-radius: 6px; border: 1px solid #eeeeee;">
           <p style="margin: 0 0 10px 0; font-size: 13px; color: #666666;">
             <strong>⚠️ Security Note:</strong> This link expires in <strong>20 minutes</strong>.
           </p>
           <p style="margin: 0 0 5px 0; font-size: 13px; color: #666666;">
             Button not working? Copy and paste this link into your browser:
           </p>
           <p style="margin: 0; font-size: 12px; color: #FF502A; word-break: break-all; line-height: 1.4;">
             <a href="{{resetPasswordUrl}}" style="color: #FF502A; text-decoration: underline;">{{resetPasswordUrl}}</a>
           </p>
        </td>
      </tr>
    </table>

    <p style="margin: 0; font-size: 14px; line-height: 21px; color: #999999; text-align: center;">
      If you did not request a password reset, please contact our support team immediately.
    </p>

  {{/inline}}
{{/base_template}}
